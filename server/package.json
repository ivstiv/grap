{
  "name": "app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test mocha -r dotenv-flow/config --require ./dist/tests/utils.js ./dist/tests",
    "coverage": "nyc --reporter=json-summary --reporter=text npm run test",
    "coverage-badge": "make-coverage-badge",
    "build": "rm -rf dist && tsc -p tsconfig.json && cp -r src/public dist",
    "start": "node -r dotenv-flow/config dist/index.js",
    "dev": "nodemon --watch src -e ts,css --exec 'npm run lint:fix && npm run build && npm run start'",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --fix --ext .ts",
    "lint:watch": "esw --quiet --watch --fix --ext .ts",
    "knex": "node -r dotenv-flow/config ./node_modules/knex/bin/cli.js --knexfile ./dist/database/knexfile.js",
    "migrate:up": "npm run knex migrate:up",
    "migrate:down": "npm run knex migrate:down",
    "migrate:rollback": "npm run knex migrate:rollback",
    "migrate:latest": "npm run knex migrate:latest",
    "migrate:make": "node ./node_modules/knex/bin/cli.js --migrations-directory src/database/migrations migrate:make -x ts",
    "seed": "npm run knex seed:run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^7.3.1",
    "@fastify/formbody": "^7.0.1",
    "@fastify/session": "^9.0.0",
    "@fastify/static": "^6.4.1",
    "@fastify/view": "^7.0.0",
    "@types/lodash": "^4.14.182",
    "@types/mocha": "^9.1.1",
    "bcrypt": "^5.0.1",
    "dotenv-flow": "^3.2.0",
    "ejs": "^3.1.8",
    "fastify": "^4.3.0",
    "knex": "^2.2.0",
    "lodash": "^4.17.21",
    "mailparser": "^3.5.0",
    "objection": "^3.0.1",
    "smtp-server": "^3.11.0",
    "sqlite3": "^5.0.10",
    "unique-names-generator": "^4.7.1",
    "yup": "^0.32.11",
    "zod": "^3.17.10"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/dotenv-flow": "^3.2.0",
    "@types/ejs": "^3.1.1",
    "@types/mailparser": "^3.4.0",
    "@types/node": "^18.6.2",
    "@types/smtp-server": "^3.5.7",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "make-coverage-badge": "^1.2.0",
    "mocha": "^10.0.0",
    "mocha-steps": "^1.3.0",
    "node-html-parser": "^5.3.3",
    "nodemon": "^2.0.19",
    "nyc": "^15.1.0",
    "typescript": "^4.7.4"
  }
}
